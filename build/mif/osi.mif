!ifeq host_os osi
lname = $^&.rex
!else
lname = $^@
!endif

!ifeq host_os osi
!ifdef __UNIX__
osildr = $(src_dir)/w32loadr/os2ldr/os2ldr.exe
!else
osildr = $(src_dir)\w32loadr\os2ldr\os2ldr.exe
!endif
!endif

bind_osildr: .PROCEDURE .EXPLICIT
!ifeq host_os osi
        $(w32bind) $^&.rex $^@ $(osildr)
        @rm -f $^&.rex
!endif
