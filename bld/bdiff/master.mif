# resources
############
pusage.gh : ../usage.sp
    *wsplice -kBPATCH -kENGLISH -t8 -f "pick(MSG_USAGE_FIRST+%$#%+, \"%s\", \"\")" $[@ $@

pusagej.gh : ../usage.sp
    *wsplice -kBPATCH -kJAPANESE -t8 -f "pick(MSG_USAGE_FIRST+%$#%+, \"\", \"%s\")" $[@ $@

dusage.gh : ../usage.sp
    *wsplice -kBDIFF -kENGLISH -k$(_OS) -t8 -f "pick(MSG_USAGE_FIRST+%$#%+, \"%s\", \"\")" $[@ $@

bpatch.res : ../bpatch.rc ../h/bpatch.h pusage.gh pusagej.gh
    $(rc_aui) -I.. -DBPATCH $[@ -fo=$^@

bdiff.res : ../bpatch.rc dusage.gh ../h/bpatch.h
    $(rc_aui) -I.. -DBDIFF $[@ -fo=$^@

bdump.res : ../bpatch.rc dusage.gh ../h/bpatch.h
    $(rc_aui) -I.. -DBDUMP $[@ -fo=$^@

ntmanif.res: ../ntmanif.rc
!ifeq verbose 1
        $(rc) $(rc_flags) -I.. $(inc_dirs_sys) -I"$(watcom_dir)/h" $< -fo=$^@
!else
        @echo rc $@
        @$(rc) $(rc_flags) -I.. $(inc_dirs_sys) -I"$(watcom_dir)/h" $< -fo=$^@
!endif

bind_manifest: .PROCEDURE
!ifdef manifest_$(host_os)_$(host_cpu)
!ifeq verbose 1
        $(rc) -k $(manifest_$(host_os)_$(host_cpu)) $^@
!else
        @echo bind rc $@
        @$(rc) -k $(manifest_$(host_os)_$(host_cpu)) $^@
!endif
!endif
